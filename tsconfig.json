{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": [],
    "typeRoots": ["./types"],
    "lib": ["esnext", "dom"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"]
    },
  },
  "include": ["types/**/*.ts", "src/components/**/*.ts", "src/main.ts"],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
